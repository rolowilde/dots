alias dots="git --git-dir=$HOME/.dots/ --work-tree=$HOME"
alias sudo="sudo "
alias ls="ls --color=auto -lAh"
alias eza="eza -laH --color=auto --icons=auto"
alias grep="grep --color=auto --exclude-dir={.git,.svn}"
alias ping="ping -c 5"
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"
alias free="free -h"
alias du="du -h"
alias df="df -h"
alias ip="ip -c"
